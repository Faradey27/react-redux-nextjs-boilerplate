{
  "name": "react-redux-nextjs-boilerplate",
  "version": "0.0.1",
  "description": "Boilerplate for react-redux project with nextjs and tests",
  "scripts": {
    "dev": "node src/server.js",
    "start": "npm run build && cross-env NODE_ENV=production node src/server.js",
    "build": "next build src",
    "test:unit": "jest",
    "lint": "eslint -c .eslintrc .",
    "analyze": "cross-env ANALYZE=1 npm run build"
  },
  "jest": {
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/next.config.js",
      "!src/.next/**",
      "!src/server.js"
    ],
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "moduleNameMapper": {
      "^.*[.](gif|ttf|eot|svg|png|jpg)$": "<rootDir>/__test__/utils/fileMock.js"
    }
  },
  "dependencies": {
    "compression": "^1.7.0",
    "cross-env": "^5.0.5",
    "express": "^4.15.4",
    "next": "^3.2.1",
    "progress-bar-webpack-plugin": "^1.10.0",
    "react": "^15.6.1",
    "react-dom": "^15.6.1"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "enzyme": "^2.9.1",
    "eslint": "^4.6.0",
    "eslint-config-hardcore-react": "^0.2.7",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-fp": "^2.3.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.3.0",
    "jest": "^20.0.4",
    "node-fetch": "^1.7.2",
    "react-test-renderer": "^15.6.1",
    "webpack-bundle-analyzer": "^2.9.0"
  },
  "main": "pages/index.js",
  "keywords": [
    "react",
    "webpack2",
    "redux",
    "jest",
    "nextjs",
    "windows",
    "i18n"
  ],
  "author": {
    "name": "Andrii Tiertyshnyi",
    "email": "andrii.tiertyshnyi@gmail.com"
  },
  "contributors": [
    {
      "name": "Andrii Tiertyshnyi(Faradey27)",
      "url": "https://github.com/Faradey27"
    }
  ],
  "license": "Apache License 2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Faradey27/react-redux-nextjs-boilerplate"
  },
  "bugs": {
    "url": "https://github.com/Faradey27/react-redux-nextjs-boilerplate/issues"
  },
  "engines": {
    "node": "8.4.0"
  }
}
